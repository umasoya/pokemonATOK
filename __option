# vim: set ft=sh :

## init option vars
# part of speech
CLASS='固有一般'
# generation range
FROM=1
TO=${MAX_GEN}
# default filename
OUTPUT='pokemon'
# output file bundle option
BUNDLE=false
# debug flag
DEBUG=false
# verbose flag
VERBOSE=false

# parse options
while getopts bc:df:o:t:v OPT; do
  case ${OPT} in
    b)
      BUNDLE=true
      ;;
    c)
      CLASS=${OPTARG}
      ;;
    d)
      DEBUG=true
      ;;
    f)
      FROM=${OPTARG}
      __validate::integer ${FROM} f
      ;;
    o)
      OUTPUT=${OPTARG}
      ;;
    t)
      TO=${OPTARG}
      __validate::integer ${TO} t
      ;;
    v)
      VERBOSE=true
      ;;
  esac
done
